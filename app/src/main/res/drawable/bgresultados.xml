<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
 
    <!-- Color de fondo de la vista -->
    <!--<solid
        android:color="@color/naranja" />-->


    <!-- Color de fondo con degradado -->
    <gradient
        android:startColor="@color/naranja"
        android:endColor="@color/naranjaOscurito"
        android:angle="270">
    </gradient>

 
    <!-- Color y ancho del borde del elemento -->
    <stroke
        android:width="4dp"
        android:color="@color/marronOscuro" />

 
    <!-- Si queremos añadir algún padding -->
    <padding
        android:top="@dimen/textoIntermedio"/>
 
    <!-- Aquí indicamos el radio a aplicar a las esquinas -->
    <corners
        android:radius="@dimen/paddingIntermedio"/>
 
</shape>